= simple_form_for @action, :html => { :class => "form-horizontal", :multipart => true,  } do |f|
  = f.collection_radio_buttons :type, [['link', 'link'], ['vkontakte', 'vkontakte'], ['facebook', 'facebook']], :first, :last, :item_wrapper_class => 'inline'
  = f.input :description
  = f.input :data
  = f.input :minutes
  = f.input :money
  = image_tag(@action.image_url) if @action.image?
  = f.input :image, as: :file
  = f.input :instantly
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    '
    = link_to t('.cancel', :default => t("helpers.links.cancel")), actions_path, :class => 'btn'
